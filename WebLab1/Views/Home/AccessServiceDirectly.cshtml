@{
    Layout = null;
}
@using WebLab1.Services
@inject Calc calc
<!doctype html>
<html>
<head>
    <title>Hello ASP.NET MVC Core</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <link type="text/css" href="~/Style/Style.css" rel="stylesheet">
</head>
<body>
    <header>
        <b>Backend1</b> 
        <a href="~/Home/Index">Home</a>
    </header>
    <main>
        <h1>AccessServiceDirectly</h1>
        <h3>Rand Value First : @calc.First</h3>
        <h3>Rand Value Second : @calc.Second</h3>
        <h3>Add :</h3>
        <p>@calc.Sum()</p>
        <h3>Sub :</h3>
        <p>@calc.Sub()</p>
        <h3>Mult :</h3>
        <p>@calc.Mult()</p>
        <h3>Div :</h3>
        <p>@calc.Div()</p>
    </main>
    <hr>
    <footer>© @DateTime.Now.Year - Backend1</footer>
</body>
</html>